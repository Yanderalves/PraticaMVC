@model LoginModel

@{
	Layout = "_LayoutDeslogado";
	ViewData["Title"] = "Página de login";
}


<p>Página de login</p>
@if (TempData["error"] != null)
    {
        <div class="container-alert">
            <br />
            <div class="alert alert-danger" role="alert">
                <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
                @TempData["error"]
            </div>
        </div>
    }

<form asp-action="Entrar" asp-controller="Login">   
  <div class="mb-3">
    <label for="login" class="form-label">Login</label>
    <input asp-for="Login" type="login" class="form-control" id="login" placeholder="Digite o usuário" />
    @Html.ValidationMessageFor(x => x.Login)
  </div>
  <div class="mb-3">
    <label for="senha" class="form-label">Senha</label>
        <input asp-for="Senha" type="password" class="form-control" id="senha" placeholder="Digite a senha">
        @Html.ValidationMessageFor( x => x.Senha)
  </div>
  <button type="submit" class="btn btn-primary">Entrar</button>
</form>