@model List<ContatoModel>

@{
    ViewData["Title"] = "Listagem de contatos";
}


<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a asp-controller="Contato" asp-action="Criar" class="btn btn-primary">Adiconar novo contato</a>
    </div>
    <br />
    <h1 class="display-4">Listagem de contatos</h1>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Celular</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any()){
                @foreach (ContatoModel item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Nome</td>
                        <td>@item.Email</td>
                        <td>@item.Telefone</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic outlined example">
                                <a asp-action="PaginaEditar" asp-route-id="@item.Id" asp-controller="Contato" role="button" class="btn btn-outline-primary">Editar</a>
                                <a asp-action="ConfirmarDelecao" asp-route-id="@item.Id" asp-controller="Contato" role="button" class="btn btn-outline-danger">Deletar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>



