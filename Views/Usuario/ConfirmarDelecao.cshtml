@model UsuarioModel

@{
    ViewData["Title"] = "Confiramação de deleção de usuario";
}

<div class="container-md">
    <h1 class="display-6">Deseja realmente apagar o usuario abaixo?</h1>
    <br />
    <div>
        <div class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(x => x.Nome)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(x => x.Nome)
            </dt>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(x => x.Email)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(x => x.Email)
            </dt>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(x => x.Login)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(x => x.Login)
            </dt>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(x => x.Perfil)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(x => x.Perfil)
            </dt>
        </div>
    </div>
        <a asp-action="Index" asp-controller="Usuario" role="button" class="btn btn-primary">Cancelar</a>
        <a asp-action="Deletar" asp-route-id=@Model.Id asp-controller="Usuario" role="button" class="btn btn-danger">Deletar</a>
</div>