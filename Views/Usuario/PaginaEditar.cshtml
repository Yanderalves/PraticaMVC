@using SiteMVC.Models.Enums;
@model UsuarioModel 

@{
    ViewData["Title"] = "Editar usuario";
}

<div class="text-center">
    <h1 class="display-5">Editar Usuario</h1>
</div>
<form asp-action="Editar" asp-controller="Usuario" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input asp-for="Nome" type="text" class="form-control" id="nome">
        @Html.ValidationMessageFor(x => x.Nome)

    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input asp-for="Email" type="email" class="form-control" id="email">
        @Html.ValidationMessageFor(x => x.Email)

    </div>
    <div class="mb-3">
        <label for="login" class="form-label">Login</label>
        <input asp-for="Login" type="tel" class="form-control" id="login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="form-group mb-3">
        <label for="perfil" class="form-label">Perfil</label>
        <select asp-for="Perfil" class="form-select" aria-label="perfil">
            <option value="">Selecione um perfil</option>
            <option value="@EnumPerfil.Administrador">Administrador</option>
            <option value="@EnumPerfil.Padrao">Padrao</option>
        </select>
        @Html.ValidationMessageFor(x => x.Perfil)
       
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
    <a asp-controller="Usuario" asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>


